{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",        // ðŸ‘ˆ Ã  la place de "bundler" (plus compatible avec Next)
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",                 // ðŸ‘ˆ permet dâ€™utiliser JSX dans les fichiers .tsx
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]                   // ðŸ‘ˆ retirÃ© la virgule aprÃ¨s cette ligne (erreur JSON)
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs",
    "next.config.js"
  ],
  "exclude": ["node_modules"]
}
